# üîê Wellibuy AI - Complete Environment Variables
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE
# ==========================================
MONGODB_URI=mongodb://localhost:27017/wellibuy-ai
DATABASE_NAME=wellibuy-ai
NODE_ENV=development
PORT=5000

# ==========================================
# JWT & ENCRYPTION
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-54321
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-here!
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_TIMEOUT_MS=3600000

# ==========================================
# FRONTEND
# ==========================================
FRONTEND_URL=http://localhost:3000
APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# ==========================================
# EMAIL (for 2FA, notifications, magic links)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-not-regular-password
EMAIL_FROM=noreply@wellibuy.com
EMAIL_FROM_NAME=Wellibuy AI

# ==========================================
# TIER 1: CRITICAL SECURITY FEATURES
# ==========================================

# OAuth 2.0 - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# OAuth 2.0 - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# OAuth 2.0 - Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback

# WebAuthn / FIDO2
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Wellibuy

# Bot Detection - Google reCAPTCHA v3
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_MIN_SCORE=0.5

# SMS / Two-Factor - Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWOFACTOR_WINDOW_MS=900000
TWOFACTOR_ENABLED=true

# ==========================================
# TIER 2: HIGH PRIORITY FEATURES
# ==========================================

# Geolocation Blocking
BLOCKED_COUNTRIES=CN,RU,KP,IR,SY
ALLOWED_COUNTRIES=
# Leave ALLOWED_COUNTRIES empty to allow all except blocked
# If set, ONLY these countries will be allowed

# VPN/Proxy Detection
IPHUB_API_KEY=your-iphub-api-key
IPQUALITYSCORE_API_KEY=your-ipqualityscore-api-key

# Threat Intelligence APIs
ABUSEIPDB_API_KEY=your-abuseipdb-api-key
STOPFORUMSPAM_API_KEY=optional-stopforumspam-key

# Webhook Verification
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# ==========================================
# TIER 3: MEDIUM PRIORITY
# ==========================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Monitoring
DB_SLOW_QUERY_THRESHOLD_MS=100
DB_PROFILING_ENABLED=true

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ==========================================
# TIER 4: LONG-TERM / ADVANCED
# ==========================================

# Secrets Management (HashiCorp Vault)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token

# Anomaly Detection
ANOMALY_DETECTION_ENABLED=false
ANOMALY_THRESHOLD_SCORE=0.8

# Certificate Pinning (Mobile Apps)
CERTIFICATE_FINGERPRINTS=sha256/AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=

# PGP Email Encryption
PGP_PUBLIC_KEY_PATH=/path/to/public.key
PGP_PRIVATE_KEY_PATH=/path/to/private.key
PGP_PASSPHRASE=your-pgp-passphrase

# ==========================================
# REDIS (Optional - for better performance)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# MONITORING & LOGGING
# ==========================================
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
ENABLE_AUDIT_LOGGING=true

# ==========================================
# PAYMENT GATEWAYS
# ==========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-public

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-secret
PAYPAL_MODE=sandbox

# ==========================================
# ADMIN SETTINGS
# ==========================================
ADMIN_MFA_REQUIRED=true
ADMIN_SESSION_TIMEOUT_MINUTES=15

# ==========================================
# CORS & SECURITY
# ==========================================
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false

# ==========================================
# DEVELOPMENT ONLY
# ==========================================
DEBUG_MODE=false
SKIP_EMAIL_VERIFICATION=false
MOCK_EXTERNAL_APIS=false

# ü§ñ AI & APIS
# =============
# OpenAI API (for AI recommendations)
OPENAI_API_KEY=your_openai_api_key_here

# Price Comparison APIs (Optional)
PRICE_COMPARISON_API_KEY=your_api_key_here

# üí≥ PAYMENT PROCESSING
# ======================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_PUBLIC_KEY=pk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal (if using instead of Stripe)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret

# üîê CORS & SECURITY
# ====================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW_MS=1800000

# üìä LOGGING & AUDIT
# ====================
ENABLE_AUDIT_LOG=true
AUDIT_LOG_DB=audit_logs
LOG_FILE=logs/app.log

# üë®‚Äçüíº ADMIN SETTINGS
# ==================
ADMIN_EMAIL=admin@wellibuy.com
ADMIN_PASSWORD=change-me-in-production

# API Management
API_SECRET_KEY=your-api-secret-key-here

# üîí FEATURE FLAGS
# =================
ENABLE_2FA=false
ENABLE_GDPR_EXPORTS=true
ENABLE_SOFT_DELETE=true
ENABLE_PASSWORD_HISTORY=true
