# Wellibuy AI - Production Environment Şablonu
# ⚠️ BU DOSYAYI .gitignore'A EKLE - HİÇBİR ZAMAN COMMIT ETME!

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=production
PORT=5001

# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wellibuy?retryWrites=true&w=majority

# ============================================
# JWT & AUTHENTICATION
# ============================================
JWT_SECRET=your-very-long-random-secret-key-here-change-this
SESSION_SECRET=another-very-long-random-secret-key-here-change-this

# ============================================
# EXTERNAL SERVICES
# ============================================
# OpenAI API
OPENAI_API_KEY=sk-your-actual-key-here

# ============================================
# FRONTEND URLs
# ============================================
FRONTEND_URL=https://wellibuy.com
NEXT_PUBLIC_API_URL=https://api.wellibuy.com

# ============================================
# SECURITY
# ============================================
# Trust proxy (CloudFlare gibi CDN kullanıyorsan)
TRUST_PROXY=true

# CloudFlare DDoS Protection
CLOUDFLARE_ENABLED=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/xxxxx

# ============================================
# MONITORING
# ============================================
DATADOG_API_KEY=your-datadog-api-key
DATADOG_ENABLED=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# BACKUP & RECOVERY
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Her gün saat 2:00'de
BACKUP_RETENTION_DAYS=30

# ============================================
# EMAIL (Gelecek özellikler için)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL=admin@wellibuy.com
